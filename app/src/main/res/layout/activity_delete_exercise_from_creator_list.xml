<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteExerciseFromCreatorList">


    <ImageView
        android:id="@+id/imageView_Logo_DeleteExerciseFromCreatorList"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_Yes_DeleteExerciseFromCreatorList"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Question_DeleteExerciseFromCreatorList" />

    <Button
        android:id="@+id/button_No_DeleteExerciseFromCreatorList"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Yes_DeleteExerciseFromCreatorList"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_Question_DeleteExerciseFromCreatorList"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Do you want to remove this from your training plan?"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:textColor="@color/colorGray"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Logo_DeleteExerciseFromCreatorList" />


</androidx.constraintlayout.widget.ConstraintLayout>