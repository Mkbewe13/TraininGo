<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".CreateNewPlan">

    <ImageView
        android:id="@+id/imageView_Logo_CreateNewPlan"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_planname_CreateNewPlan"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_edittext_round_rect"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Plan name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_caption_CreateNewPlan" />

    <EditText
        android:id="@+id/editText_about_CreateNewPlan"
        android:layout_width="225dp"
        android:layout_height="190dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:background="@drawable/custom_edittext_round_rect"
        android:fontFamily="@font/righteous"
        android:gravity="top|left"
        android:hint="About"
        android:inputType="textMultiLine"
        android:maxLength="2000"
        android:maxLines="6"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_planname_CreateNewPlan" />

    <Button
        android:id="@+id/button_next_CreateNewPlan"
        android:layout_width="116dp"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_about_CreateNewPlan"
        app:layout_constraintVertical_bias="0.013" />

    <TextView
        android:id="@+id/textView_caption_CreateNewPlan"
        android:layout_width="259dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/righteous"
        android:text="Step 1: Name and describe your training plan."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Logo_CreateNewPlan" />

</androidx.constraintlayout.widget.ConstraintLayout>