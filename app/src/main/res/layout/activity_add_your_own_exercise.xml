<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AddYourOwnExercise">


    <ImageView
        android:id="@+id/imageView_Logo_AddYourOwnExercise"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_ExerciseName_AddYourOwnExercise"
        android:layout_width="274dp"
        android:layout_height="57dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/custom_edittext_round_rect"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:hint="Exercise name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Logo_AddYourOwnExercise" />

    <Button
        android:id="@+id/button_Done_AddYourOwnExercise"
        android:layout_width="140dp"
        android:layout_height="59dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_redhintname_AddYourOwnEzercise" />

    <TextView
        android:id="@+id/textView_redhintname_AddYourOwnEzercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:textSize="13sp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_ExerciseName_AddYourOwnExercise" />


</androidx.constraintlayout.widget.ConstraintLayout>