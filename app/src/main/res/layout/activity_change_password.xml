<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <ImageView
        android:id="@+id/imageView_logo_ChangePassword"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_password1_ChangePassword"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_edittext_round_rect"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:hint="New password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_passwordvisibility_ChangePassword"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo_ChangePassword" />

    <EditText
        android:id="@+id/editText_password2_ChangePassword"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_edittext_round_rect"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Repeat password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_passwordvisibility2_ChangePassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_redhintpassword_ChangePassword" />

    <Button
        android:id="@+id/button_changePassword_ChangePassword"
        android:layout_width="221dp"
        android:layout_height="47dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="Change Password"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password2_ChangePassword"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/imageView_passwordvisibility_ChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:background="@drawable/noeye"
        app:layout_constraintBottom_toBottomOf="@+id/editText_password1_ChangePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo_ChangePassword"
        app:layout_constraintVertical_bias="0.885" />

    <ImageView
        android:id="@+id/imageView_passwordvisibility2_ChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:background="@drawable/noeye"
        app:layout_constraintBottom_toBottomOf="@+id/editText_password2_ChangePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password1_ChangePassword"
        app:layout_constraintVertical_bias="0.828" />

    <TextView
        android:id="@+id/textView_redhintpassword_ChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password1_ChangePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>