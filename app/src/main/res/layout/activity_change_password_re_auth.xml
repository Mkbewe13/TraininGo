<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordReAuth">

    <ImageView
        android:id="@+id/imageView_logo_ChangePasswordReAuth"
        android:layout_width="346dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_email_ChangePasswordReAuth"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_textview_round_rect_border"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_label_ChangePasswordReAuth" />

    <EditText
        android:id="@+id/editText_password_ChangePasswordReAuth"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_edittext_round_rect"
        android:ems="10"
        android:fontFamily="@font/righteous"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_passwordvisibility_ChangePasswordReAuth"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_email_ChangePasswordReAuth" />

    <Button
        android:id="@+id/button_next_ChangePasswordReAuth"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/custom_button_round_rect"
        android:fontFamily="@font/righteous"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password_ChangePasswordReAuth"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageView_passwordvisibility_ChangePasswordReAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/noeye"
        app:layout_constraintBottom_toBottomOf="@+id/editText_password_ChangePasswordReAuth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_email_ChangePasswordReAuth"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView_label_ChangePasswordReAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/righteous"
        android:text="Confirm your password."
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo_ChangePasswordReAuth" />


</androidx.constraintlayout.widget.ConstraintLayout>